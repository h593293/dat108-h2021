<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
	http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
	id="WebApp_ID" 
	version="4.0">
	
  <display-name>F17a - web.xml og initparams</display-name>
  
  <welcome-file-list>
    <welcome-file>greetings</welcome-file>
  </welcome-file-list>

  <context-param>
    <param-name>greeting</param-name>
    <param-value>Hello world!</param-value>
  </context-param>  

  <servlet>
    <servlet-name>Min magiske Servlet</servlet-name>
    <servlet-class>somepackage.MyServlet</servlet-class>
    <init-param>
      <param-name>greeting</param-name>
      <param-value>Heia Varegg!</param-value>
    </init-param>
  </servlet>

</web-app>